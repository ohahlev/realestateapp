<!DOCTYPE html>
<%#include "featured.h" %>
<% tfetch(QVariantMap, featured); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Featured</h1>

<%== formTag(urla("save", featured["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="featured[id]" value="<%= featured["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>Image<br /><input type="text" name="featured[image]" value="<%= featured["image"] %>" /></label>
  </p>
  <p>
    <label>Html<br /><input type="text" name="featured[html]" value="<%= featured["html"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Save" />
  </p>
</form>

<%== linkTo("Show", urla("show", featured["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
