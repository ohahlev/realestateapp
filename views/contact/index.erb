<!DOCTYPE html>
<%#include "contact.h" %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>

<h1>Listing Contact</h1>

<%== linkTo("Create a new Contact", urla("create")) %><br />
<br />
<table border="1" cellpadding="5" style="border: 1px #d0d0d0 solid; border-collapse: collapse;">
  <tr>
    <th>ID</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Location</th>
    <th>Latitude</th>
    <th>Longitude</th>
  </tr>
<% tfetch(QList<Contact>, contactList); %>
<% for (const auto &i : contactList) { %>
  <tr>
    <td><%= i.id() %></td>
    <td><%= i.phone() %></td>
    <td><%= i.email() %></td>
    <td><%= i.location() %></td>
    <td><%= i.latitude() %></td>
    <td><%= i.longitude() %></td>
    <td>
      <%== linkTo("Show", urla("show", i.id())) %>
      <%== linkTo("Edit", urla("save", i.id())) %>
      <%== linkTo("Remove", urla("remove", i.id()), Tf::Post, "confirm('Are you sure?')") %>
    </td>
  </tr>
<% } %>
</table>

</body>
</html>
