<!DOCTYPE html>
<%#include "service.h" %>
<% tfetch(QVariantMap, service); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Service</h1>

<%== formTag(urla("save", service["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="service[id]" value="<%= service["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>Icon<br /><input type="text" name="service[icon]" value="<%= service["icon"] %>" /></label>
  </p>
  <p>
    <label>Name<br /><input type="text" name="service[name]" value="<%= service["name"] %>" /></label>
  </p>
  <p>
    <label>Subline<br /><input type="text" name="service[subline]" value="<%= service["subline"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Save" />
  </p>
</form>

<%== linkTo("Show", urla("show", service["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
